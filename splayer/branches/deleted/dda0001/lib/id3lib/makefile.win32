{$(SRCDIR)}.cpp{$(OBJDIR)}.obj:
	@if not exist $(OBJDIR) md $(OBJDIR)
	@$(CC) $(CFLAGS) -Fo$*.obj -c $(SRCDIR)\$(*F).cpp

{$(ZLIBDIR)}.c{$(OBJDIR)}.obj:
	@if not exist $(OBJDIR) md $(OBJDIR)
	@$(CC) $(CFLAGS) -Fo$*.obj -c $(ZLIBDIR)\$(*F).c

id3lib$(SUFFIX).lib : $(OBJS)
	@lib /nologo /out:id3lib$(SUFFIX).lib $(OBJS)
