	$(OBJDIR)\io_helpers.obj \
	$(OBJDIR)\misc_support.obj \
	$(OBJDIR)\mp3_parse.obj \
	$(OBJDIR)\readers.obj \
	$(OBJDIR)\spec.obj \
	$(OBJDIR)\tag.obj \
	$(OBJDIR)\tag_file.obj \
	$(OBJDIR)\tag_find.obj \
