	$(SRCDIR)\tag_parse_lyrics3.cpp \
	$(SRCDIR)\tag_parse_musicmatch.cpp \
	$(SRCDIR)\tag_parse_v1.cpp \
	$(SRCDIR)\tag_render.cpp \
